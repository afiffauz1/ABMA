<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/login_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="146dp"
                android:src="@drawable/login_thumbnail"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:scaleType="fitCenter"
                />
            <EditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/login_thumbnail"
                android:inputType="textEmailAddress"
                android:background="@drawable/button_overline"
                android:hint="Name..."
                android:padding="4dp"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:drawableStart="@drawable/ic_contacts_black_24dp"
                />
            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/input_name"
                android:inputType="textEmailAddress"
                android:background="@drawable/button_overline"
                android:hint="E-mail..."
                android:padding="4dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:drawableStart="@drawable/ic_email_black_24dp"
                />
            <EditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/input_email"
                android:inputType="textPassword"
                android:background="@drawable/button_overline"
                android:hint="Password..."
                android:padding="4dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:drawableStart="@drawable/ic_enhanced_encryption_black_24dp"
                />
            <EditText
                android:id="@+id/input_repassword"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/input_password"
                android:inputType="textPassword"
                android:background="@drawable/button_overline"
                android:hint="Re-type Password..."
                android:padding="4dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:drawableStart="@drawable/ic_enhanced_encryption_black_24dp"
                />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_repassword"
                android:layout_marginTop="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/button_solid"
                android:text="REGISTER"
                android:textColor="#ffffff"
                android:textSize="20dp"
                />

        </RelativeLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>