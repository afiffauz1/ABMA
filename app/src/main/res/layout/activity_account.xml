<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_profpic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/profpic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        ></de.hdodenhof.circleimageview.CircleImageView>


    <EditText
        android:id="@+id/set_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:hint="Username..."
        android:layout_below="@+id/user_profpic"
        android:textAlignment="center"
        android:drawableStart="@drawable/ic_contacts_black_24dp"
        android:background="@drawable/button_overline"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="8dp"
        android:layout_marginTop="40dp"
        />
        <EditText
        android:id="@+id/set_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_username"
        android:inputType="textMultiLine"
        android:hint="Edit Status..."
        android:textAlignment="center"
        android:drawableStart="@drawable/ic_contacts_black_24dp"
        android:background="@drawable/button_overline"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="8dp"
        android:layout_marginTop="15dp"
        />
    <Button
        android:id="@+id/btn_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_status"
        android:text="UPDATE"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="@drawable/button_solid"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="8dp"
        android:layout_marginTop="30dp"
        />

</RelativeLayout>