<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectLesson1Activity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="20dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Lesson 1 total score"
            android:textSize="25sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/total_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="0"
            android:textSize="120sp"
            android:textColor="#11998e"
            android:textStyle="bold"
            android:layout_below="@+id/title"
            />
        <Button
            android:id="@+id/question1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Question 1"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:background="@drawable/button_solid_green"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/total_score"
            android:layout_marginTop="40dp"
            />

        <Button
            android:id="@+id/question2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Question 2"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:background="@drawable/button_solid_green"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/question1"
            android:layout_marginTop="20dp"
            />

        <Button
            android:id="@+id/question3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Question 3"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:background="@drawable/button_solid_green"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/question2"
            android:layout_marginTop="20dp"
            />

        <Button
            android:id="@+id/question4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Question 4"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:background="@drawable/button_solid_green"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/question3"
            android:layout_marginTop="20dp"
            />

        <Button
            android:id="@+id/question5"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Question 5"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:background="@drawable/button_solid_green"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/question4"
            android:layout_marginTop="20dp"
            />
    </RelativeLayout>
</ScrollView>

</RelativeLayout>